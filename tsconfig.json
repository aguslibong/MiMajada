{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,         // Evitar que TypeScript genere archivos .js, Babel se encargará de esto
    "jsx": "react-native",  // JSX compatible con React Native
    "target": "ES6",        // Configurar el target ECMAScript para el código transpilado
    "strict": true,         // Mantener reglas estrictas para TypeScript
    "moduleResolution": "node"
  }
}
